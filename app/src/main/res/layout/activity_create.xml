<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateActivity"
    android:weightSum="1">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editNameEvent"
            android:hint="Event name"
            android:theme="@style/MyEditTextTheme"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="START"
                android:id="@+id/textDateBegin"
                android:paddingRight="55dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editStartDate"
                android:hint="11 mars 2012"
                android:theme="@style/MyEditTextTheme"
                android:clickable="true"
                android:contextClickable="false"
                android:linksClickable="false"
                android:nestedScrollingEnabled="false"
                android:scrollIndicators="right"
                android:layout_below="@+id/textDateBegin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/editStartTime"
                android:hint="18 h 00"
                android:theme="@style/MyEditTextTheme"
                android:layout_alignTop="@+id/editStartDate"
                android:layout_toRightOf="@+id/editStartDate"
                android:layout_toEndOf="@+id/editStartDate" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="END"
                android:id="@+id/textDateEnd"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editDateEnd"
                android:hint="12 mars 2012"
                android:theme="@style/MyEditTextTheme"
                android:layout_below="@+id/textDateEnd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/editEndTime"
                android:hint="18 h 00"
                android:theme="@style/MyEditTextTheme"
                android:layout_alignTop="@+id/editDateEnd"
                android:layout_toRightOf="@+id/editDateEnd"
                android:layout_toEndOf="@+id/editDateEnd" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LOCATION"
            android:id="@+id/textLocation"
            android:paddingRight="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/locationLayout"
            android:layout_below="@+id/editPlace"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableLeft="@drawable/ic_pin_drop_24dp"
                android:id="@+id/textView"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/editLocation"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="(-34, 151) 500m"
                android:textColor="@color/colorHint"
                android:id="@+id/editLocation"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView" />


        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPlace"
            android:hint="Address"
            android:theme="@style/MyEditTextTheme"
            android:layout_below="@+id/textLocation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:id="@+id/switchPrivate"
        android:text="Private event "
        android:textColor="@color/colorHint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:checked="false"
        android:enabled="true"
        android:layout_weight="0.08" />
</LinearLayout>