<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event name"
        android:layout_marginTop="20dp"
        android:id="@+id/textNameEvent"
        android:textColor="@color/colorTextField"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNameEvent"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="@color/colorEditText"/>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Starting date"
            android:id="@+id/textDateBegin"
            android:layout_marginTop="30dp"
            android:paddingRight="55dp"
            android:textColor="@color/colorTextField"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Starting hour"
            android:id="@+id/textHourBegin"
            android:layout_marginTop="30dp"
            android:layout_alignBottom="@+id/textDateBegin"
            android:layout_toRightOf="@+id/textDateBegin"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorTextField"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editDateBegin"
            android:layout_below="@+id/textDateBegin"
            android:layout_alignRight="@+id/textDateBegin"
            android:layout_marginTop="2dp"
            android:textStyle="italic"
            android:textColor="@color/colorEditText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editHourBegin"
            android:layout_below="@+id/textHourBegin"
            android:layout_alignLeft="@+id/textHourBegin"
            android:layout_marginTop="2dp"
            android:textStyle="italic"
            android:textColor="@color/colorEditText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ending date"
            android:id="@+id/textDateEnd"
            android:layout_below="@+id/editDateBegin"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorTextField"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ending hour"
            android:id="@+id/textHourEnd"
            android:layout_marginTop="30dp"
            android:layout_alignBottom="@+id/textDateEnd"
            android:layout_alignLeft="@+id/textHourBegin"
            android:textColor="@color/colorTextField"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editDateEnd"
            android:layout_below="@+id/textDateEnd"
            android:layout_alignRight="@+id/editDateBegin"
            android:layout_marginTop="2dp"
            android:textStyle="italic"
            android:textColor="@color/colorEditText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editHourEnd"
            android:layout_below="@+id/textDateEnd"
            android:layout_toRightOf="@+id/editDateEnd"
            android:layout_alignLeft="@+id/textHourBegin"
            android:layout_marginTop="2dp"
            android:textStyle="italic"
            android:textColor="@color/colorEditText" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lieu"
        android:id="@+id/textPlace"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorTextField"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPlace"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorEditText"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Evénement privé"
            android:id="@+id/textPrivate"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorTextField"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchPrivate"
            android:layout_alignBottom="@+id/textPrivate"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>