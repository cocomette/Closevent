<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom de l&apos;événement"
        android:layout_marginTop="5dp"
        android:id="@+id/textNameEvent"
        android:textColor="@color/colorTextField"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNameEvent"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="@color/colorEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date de début"
        android:id="@+id/textDateBegin"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTextField"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editDateBegin"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date de fin"
        android:id="@+id/textDateEnd"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTextField"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editDateEnd"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lieu"
        android:id="@+id/textPlace"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTextField"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPlace"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorEditText"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Evénement privé"
            android:id="@+id/textPrivate"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextField"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchPrivate"
            android:layout_alignBottom="@+id/textPrivate"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:text="Create Event"
            android:id="@+id/sendButton"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</LinearLayout>